<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">新しい記録</h1>

		<!--コメントエラー-->

		<% if @blog.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@blog.errors.count, "件のエラーが発生しました") %></h2>

				<ul>
					<% @blog.errors.full_messages.each do |message| %>
						<li><% message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<!--コメントエラーここまで-->

<!--form_for-->

		<%= form_for(@blog) do |f| %>

		<h4>記事のタイトル</h4>
		<%= f.text_field :title %>

		<h4>本文</h4>
		<%= f.text_area :body %><br>

		<%= f.submit '投稿する' %>

		<% end %>

		<h3>ブログを投稿する際の注意</h3>
		<br>
		<li>誹謗中傷を目的とした投稿はしないように。</li>
	</div>
</div>