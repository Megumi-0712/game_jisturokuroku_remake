<div class="container">
	<div class="col-xs-4"></div>
	<div class="col-xs-5">
		<h1 class="sub-title">ブログの編集</h1>

		<!--コメントエラー-->

		<% if @blog.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@blog.errors.count, "件のエラーが発生しました") %></h2>

				<ul>
					<% @blog.errors.full_messages.each do |message| %>
						<li><% message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<!--コメントエラーここまで-->

		<!--form_for-->

		<%= form_for(@blog) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>text</h4>
			<%= f.text_area :body %><br>

			<%= f.submit '変更する' %>
		<% end %>

		<%= link_to "編集を取り消す", blog_path %>
	</div>
</div>